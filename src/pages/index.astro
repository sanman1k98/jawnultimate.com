---
import MainLayout from '@/layouts/MainLayout.astro';
import RostersSection from '@/components/RostersSection.astro';
---

<MainLayout
	title="Home"
	description="Jawn is a Philadelphia-based, mixed-division, ultimate frisbee team of incoming, current, and former Temple University students. See who's playing on the team by checking out the official rosters."
>
	<section class="mx-auto flex flex-col items-center justify-center px-4 py-16 font-overpass text-slate-800 sm:py-24">
		<h1 class="mb-4 max-w-144 text-center text-4xl font-bold tracking-tight text-slate-950 sm:text-6xl">
			A Philly frisbee team
		</h1>
		<p class="max-w-108 text-center text-base text-balance sm:text-xl">
			Jawn is a mixed-division club team of incoming, current, and former <strong>Temple University</strong> students.
		</p>
	</section>
	<RostersSection class="w-4/5 border-t-2 border-slate-400 px-4 py-16" />
	<section class="w-full">
		<!-- TODO: what is a "jawn"? -->
	</section>
</MainLayout>
